mixin templateStyle
    .template_style
        .template_
            img(src="images/template_icon.png")
doctype
html
    head
        title Login
        include includes/stylies.pug
        link(rel="stylesheet" href="css/header_footer.css")
        link(rel="stylesheet" href="css/login.css")
        link(rel="stylesheet" href="css/mediaQuery.css")
        link(href="https://fonts.googleapis.com/css?family=Great+Vibes&display=swap" rel="stylesheet") 
    body
        include header.pug
        section.account.text-center
            .layout
                .layout_text
                    h1 Account
                    p Please login or signup to continue with your purchase
        section.login.dl-mt-60.dl-mb-60
            .container
                .row
                
                    .col-lg-6
                        h2.text-center.dl-mb-30.dl-mt-30 EXISTING CUSTOMER                        
                        form
                            .col-md-12
                                label Username or E-mail Address
                            .col-md-12
                                input(type="text")
                            .col-md-12
                                label Password
                                a(href="#") Forget Password?
                            .col-md-12
                                input(type="text")
                            .col-md-12
                                .row
                                    .col-md-6
                                        span.dl-pt-50
                                            input(type="checkbox")
                                            label Remmber Me

                                    .col-md-6
                                        button Send                
                    .col-lg-6
                        h2.text-center.dl-mb-30.dl-mt-30 REGISTER AN ACCOUNT                   
                        form
                            .col-md-12
                                label Username or E-mail Address
                            .col-md-12
                                input(type="text")
                            .col-md-12
                                label Password
                                a(href="#") Forget Password?
                            .col-md-12
                                input(type="text")
                            .col-md-12
                                .row
                                    .col-md-6
                                        span.dl-pt-50
                                            input(type="checkbox")
                                            label Remmber Me

                                    .col-md-6
                                        button Send
        include footer.pug
        include includes/scripts
        script(src="js/javascript.js")
